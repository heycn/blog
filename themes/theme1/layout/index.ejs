<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lxgw-wenkai-webfont@1.6.0/lxgwwenkai-regular.css" />

<style>
  .home {
    font-family: 'LXGW WenKai', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    -webkit-font-smoothing: antialiased;
    color: #666;
  }

  .home h1 {
    margin: 0;
    padding: 0;
    font-size: 3.5em;
    font-weight: 900;
    font-family: 'LXGW WenKai', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    color: #000;
  }

  .home p {
    font-size: 18px;
    font-weight: 400;
    line-height: 1.4;
  }

  .introduction a {
    text-decoration: none;
    color: #333;
    font-weight: 600;
    position: relative;
  }

  .introduction a:after {
    content: '';
    position: absolute;
    z-index: -1;
    top: 90%;
    left: -0.1em;
    right: -0.1em;
    bottom: 0;
    transition: all 0.3s;
    background-color: #339c6d80;
  }

  .introduction a:hover:after {
    top: 0%;
  }

  .project-wrapper {
    margin-top: 64px;
  }

  .project-wrapper h1 {
    margin: 24px 0;
    padding: 0;
    font-size: 2.3em;
    font-weight: 900;
    font-family: 'LXGW WenKai', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    color: #000;
  }

  .project-list {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    grid-gap: 16px;
  }

  @media (max-width: 680px) {
    .project-list {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
  }

  .project-list a {
    justify-content: center;
    border-radius: 6px;
    padding: 12px 16px;
    background-color: #e8f0f0a2;
  }

  .project-name {
    color: #000;
    font-size: 18px;
    font-weight: 700;
  }

  .project-describe {
    color: #7a7a7b;
  }
</style>

<div class="home">
  <% for(let item of theme.greetings){ %>
  <h1><%- item.label %></h1>
  <% } %>
  <div class="introduction">
    <p>
      <% for(let item of theme.introduction){ %>
      <span><%- item.label %></span>
      <br /><br />
      <% } %>
    </p>
  </div>
  <div class="project-wrapper">
    <h1>Projects</h1>
    <div class="project-list">
      <% for(let item of theme.project){ %>
      <a title="<%- item.name %>" target="_blank" href="<%- item.path %>">
        <div class="project-name"><%- item.name %></div>
        <div class="project-describe"><%- item.describe %></div>
      </a>
      <% } %>
    </div>
  </div>
</div>
